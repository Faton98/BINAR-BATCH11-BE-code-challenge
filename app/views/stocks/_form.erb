<div class="container">
  <div class="row">
    <%= form_for(@stock) do |stock| %>

        <div class="form-group">
          <%= stock.label :ID_Barang %>
          <%= stock.text_field :idStock, class:'form-control', type: 'text', placeholder: 'ID Barang' %>
        </div>

        <div class="form-group">
          <%= stock.label :Nama_Barang %>
          <%= stock.text_field :namaBarang, class:'form-control', type: 'text', placeholder: 'Nama Barang' %>
        </div>

        <div class="form-group">
          <%= stock.label :Harga_Barang %>
          <%= stock.text_field :hargaBarang, class:'form-control', type: 'text', placeholder: 'Harga Barang' %>
        </div>

        <div class="form-group">
          <%= stock.label :Jumlah_Stock %>
          <%= stock.text_field :jumlagStock, class:'form-control', type: 'text', placeholder: 'Jumlah' %>
        </div>

        <%= stock.submit :Save, class:'btn btn-success' %>
        <%= link_to 'Back', 'javascript:history.back()' %>

    <% end %>
  </div>
</div>